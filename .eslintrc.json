{
  "extends": "@rocketseat/eslint-config/node",
  "rules": {
      "prettier/prettier": [
        "error",
        {
          "printWidth": 80,
          "tabWidth": 2,
          "trailingComma": "all",
          "singleQuote": true,
          "arrowParens": "always",
          "semi": true
